{
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--follow-imports=silent",
        "--ignore-missing-imports",
        "--show-column-numbers",
        "--no-pretty",
        "--check-untyped-defs",
        "--install-types"
    ],
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "isort.check": true
}